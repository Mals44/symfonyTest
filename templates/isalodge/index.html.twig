{% extends 'base.html.twig' %}

{% block title %}Hello IsalodgeController!{% endblock %}

{% block body %}
    {% for article in articles %}
    <section class="articles">
        <article>
            <h2>{{ article.title }}</h2>
                <div class="metadat">Ecrit le {{ article.createdAt | date('d/m/Y') }} Ã  {{ article.createdAt | date('H:i') }} dans la categorie  {{ article.category.title }}
                </div>
                    <div class="content">
                        <img src="{{ article.image }}" alt="">
                        {{ article.content | raw }}
                        <a href="{{ path('isalodge_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
                    </div>
        </article>
    {% endfor %} 
    </section>


{% endblock %}
